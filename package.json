{
  "name": "anotherminor-pages-dev",
  "private": true,
  "version": "0.1.0",
  "description": "Hugo journal blog with Pagefind for Cloudflare Pages",
  "scripts": {
    "search:index": "pagefind --site public --glob \"posts/**/*.html\"",
    "build": "hugo --gc --minify && npm run search:index",
    "build:cf": "hugo --gc --minify --baseURL \"${SITE_BASE_URL:-$CF_PAGES_URL}\" && npx --no-install pagefind --site public --glob \"posts/**/*.html\""
  },
  "devDependencies": {
    "pagefind": "1.4.0"
  }
}
